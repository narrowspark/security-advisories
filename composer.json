{
    "name": "narrowspark/security-advisories-builder",
    "type": "library",
    "description": "Travis cron to build security.sensiolabs.org database as a json file",
    "homepage": "http://github.com/narrowspark/security-advisories-builder",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Bannert",
            "email": "d.bannert@anolilab.de",
            "homepage": "http://www.anolilab.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-mbstring": "*",
        "sensiolabs/security-advisories": "dev-master",
        "viserio/console": "^1.0@dev",
        "viserio/parser": "^1.0@dev",
        "symfony/yaml": "^4.1"
    },
    "require-dev": {
        "narrowspark/coding-standard": "^1.2.0",
        "phpunit/phpunit": "^7.2.0"
    },

    "autoload": {
        "psr-4": {
            "Narrowspark\\SecurityAdvisoriesBuilder\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "changelog": "changelog-generator generate --config=\".changelog\" --file --prepend",
        "coverage": "phpunit --coverage-html=\"build/logs\"",
        "cs": "php-cs-fixer fix",
        "phpstan": "phpstan analyse -c phpstan.neon -l 7 src --memory-limit=-1",
        "test": "phpunit"
    },
    "support": {
        "issues": "https://github.com/narrowspark/security-advisories-builder/issues",
        "source": "https://github.com/narrowspark/security-advisories-builder"
    }
}
